@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
         
        <li class="notifications">
            <a href="#">
                <i class="glyphicon glyphicon-globe">
                    <span class="badge js-notifications-count hide"> </span>
                </i>
            </a>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.GetUserName() <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Attending","Gigs")">Gigs I am going</a></li>
                <li><a href="@Url.Action("Index","Followees")">Artist i am following</a></li>
                <li><a href="@Url.Action("Mine","Gigs")">My Upcoming gigs</a></li>
           
                <li class="divider"></li>
                <li> <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a> </li>
                 
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
